@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<LoginAndAdminPanel.Models.Ogretmen>
@{
    ViewBag.Title = "Öğretmen";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Created Date</th>
            <th scope="col">IsActive</th>
            <th scope="col">İsim</th>
            <th scope="col">Okul</th>
            <th scope="col">Müdür</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1;}
        @foreach (var ogretmen in Model)
        {

        <tr>
            <th scope="row">@i</th>
            <td>@ogretmen.CreatedDate</td>
            <td>@ogretmen.IsActive</td>
            <td>@ogretmen.Isim</td>
            <td>@ogretmen.Okul.Isim</td>
            <td>@ogretmen.Mudur.Isim</td>
            <td><button type="button" class="btn btn-primary">Detaylar</button></td>
            <td><a href="/Ogretmen/Update/@ogretmen.Id" type="button" class="btn btn-success">Update</a></td>
            <td><a href="/Ogretmen/Delete/@ogretmen.Id" type="button" class="btn btn-danger">Delete</a></td>
        </tr>
            i++;
        }
    </tbody>
</table>

@*pagination  buttons*@
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

<a href="#" class="btn btn-primary">Yeni Öğretmen Ekle</a>